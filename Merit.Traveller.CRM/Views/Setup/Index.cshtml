@model Merit.Traveller.CRM.CRMSettings

@{
    ViewBag.Title = "Setup";
}


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#Setup').validate();
    });
</script>

<div class="panel">
@using (Html.BeginForm("", "", FormMethod.Post, new { id = "Setup" }))
{
    
    <h1>Setup</h1>
    
    @Html.ValidationSummary(true)

    <div class="editor-label">
        Council Name*
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.CouncilName)
        @Html.ValidationMessageFor(model => model.CouncilName)
    </div>

    <div class="editor-label">
        Attachments Folder*
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Attachments)
        @Html.ValidationMessageFor(model => model.Attachments)
    </div>

    <div class="editor-label">
        Lookup Enabled?*
    </div>
    <div class="editor-field">
        @Html.RadioButtonFor(model => model.LookupEnabled, "true")
        @Html.RadioButtonFor(model => model.LookupEnabled, "false")
        @Html.ValidationMessageFor(model => model.LookupEnabled)
    </div>

    <div class="editor-label">
        Authentication Username*
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.AuthUser)
        @Html.ValidationMessageFor(model => model.AuthUser)
    </div>

    <div class="editor-label">
        Authentication Password*
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.AuthPass)
        @Html.ValidationMessageFor(model => model.AuthPass)
    </div>
    <p>
        <input type="submit" value="Save" />
    </p>
}
</div>