@model Merit.Traveller.BMS.BMS_Web_Admin.ws_merit_loginRequestBody
@{
    ViewBag.Title = "Log On";
}

<div id="logonContainer">
    <div id="logonLogo">
        <img border="0" src="@Url.Content("~/Content/Images/merit-logo.png")" alt="Merit Technology" style="float:left;" />
        <div id="app-name-nli">
             TRAVELLER BMS
         </div>
    </div>
    <div id="loginpanel" class="panel">
        <b id="loginHeading" class="whiteShadow">login</b>
        @using (Html.BeginForm())
        {  
            <div class="editor-label" id="loginSpace">
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.user_id, new {  @placeholder = "User ID" })
                @Html.ValidationMessageFor(m => m.user_id)
            </div>

            <div class="editor-label">
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.password, new {  @placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.password)
            </div>

            <p>
                <input id="logOnButton" type="submit" value="go >" />
            </p>
            <div id="loginErrorMessage">
                @Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.")
            </div>
        }
    </div>
</div>
<script type="text/javascript">
    $('#header-container').parent().hide();
</script>
