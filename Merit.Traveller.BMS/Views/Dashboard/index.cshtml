@{
    ViewBag.Title = "Dashboard";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="@Url.Content("~/Scripts/calendar/js/eventslist.js")"></script>
    <script src="@Url.Content("~/Scripts/calendar/js/calendar_servicecall.js")"></script>
    <link rel="stylesheet" href="/Scripts/calendar/css/calendar.css">
    <link rel="stylesheet" href="/Content/CSS/calendar_main.css">

    <title></title>
</head>
<body>
    <div class="page-content">
        <div class="page-content-area">

            <div class="container1">
                <div class="page-header">
                    <h3 id="cal_date"> </h3>
                    <div class="pull-right1 form-inline">
                        <div class="btn-group">
                            <button class="btn btn-primary" data-calendar-nav="prev" id="prev_button" onclick="prev_click();"><< Prev</button>
                            <button class="btn" data-calendar-nav="today" id="today_button" onclick="today_click();">Today</button>
                            <button class="btn btn-primary" data-calendar-nav="next" id="next_button" onclick="next_click();">Next >></button>
                        </div>
                        <div class="btn-group">
                            <button class="btn btn-warning" data-calendar-view="year">Year</button>
                            <button class="btn btn-warning" data-calendar-view="month">Month</button>

                        </div>
                        <br /><br />
                    </div>
                    <div class="pull-right1 form-inline">
                        <div class="btn-group1">
                            <<div><small class="cal-events-num badge badge-important pull-left">&nbsp;</small> Unfinished </div>
                            <div><small class="cal-events-num badge badge-important1 pull-left">&nbsp;</small> Unallocated - Approval</div>
                            <div><small class="cal-events-num badge badge-important1 pull-left">&nbsp;</small> Unallocated - Processing<div>
                            <div><small class="cal-events-num badge badge-important1 pull-left">&nbsp;</small> Finished </div>
</div>
                    </div>

                </div>


                <iframe id="calendar-frame" src="" width="100%" height="700px" frameborder="0" scrolling="no"></iframe>
            </div>
        </div>
</body>
<script>
    var monthNames = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
    var date_cal = new Date();
    date_cal.setMonth(date_cal.getMonth() - 1);
    document.getElementById('calendar-frame').src = 'Scripts/calendar/calendar_days.html?date=' + ("0" + (date_cal.getMonth() + 1)).slice(-2) + "-" + date_cal.getFullYear();
    document.getElementById('cal_date').innerHTML = monthNames[date_cal.getMonth()] + " " + date_cal.getFullYear();

    function prev_click() {
        date_cal.setMonth(date_cal.getMonth() - 1);
        document.getElementById('cal_date').innerHTML = monthNames[date_cal.getMonth()] + " " + date_cal.getFullYear();
        document.getElementById('calendar-frame').src = 'Scripts/calendar/calendar_days.html?date=' + ("0" + (date_cal.getMonth() + 1)).slice(-2) + "-" + date_cal.getFullYear();
    }

    function next_click() {

        date_cal.setMonth(date_cal.getMonth() + 1);
        document.getElementById('cal_date').innerHTML = monthNames[date_cal.getMonth()] + " " + date_cal.getFullYear();
        document.getElementById('calendar-frame').src = 'Scripts/calendar/calendar_days.html?date=' + ("0" + (date_cal.getMonth() + 1)).slice(-2) + "-" + date_cal.getFullYear();
    }

    function today_click() {
        date_cal = new Date();
        date_cal.setMonth(date_cal.getMonth() - 1);
        document.getElementById('cal_date').innerHTML = monthNames[date_cal.getMonth()] + " " + date_cal.getFullYear();
        document.getElementById('calendar-frame').src = 'Scripts/calendar/calendar_days.html?date=' + ("0" + (date_cal.getMonth() + 1)).slice(-2) + "-" + date_cal.getFullYear();
    }

</script>

</html>
