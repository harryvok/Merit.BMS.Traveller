@{
    ViewBag.Title = "Dashboard";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="@Url.Content("~/Scripts/calendar/js/eventslist.js")"></script>
    <script src="@Url.Content("~/Scripts/calendar/js/calendar_servicecall.js")"></script>
    <link rel="stylesheet" href="/Scripts/calendar/css/calendar.css">
    <link rel="stylesheet" href="/Content/CSS/calendar_main.css">
    <script>

        getcalendar_officerwork();
        getcalendar_officerworknew();

    </script>

    <title></title>
</head>
<body>
    <div class="page-content">
        <div class="page-content-area">

            <div>
                <div>
                    <!-- PAGE CONTENT BEGINS -->
                    <div>

                        <div>
                            <!--  <iframe src="http://localhost:56318/Templates/bootstrap-calendar-master/index.html" id="my-iframe" scrolling="no"></iframe>
                            -->
                            <div>

                                <div class="page-header" style="border-bottom: ;">

                                    <h3></h3>

                                    <div class="pull-right1 form-inline">
                                        <div class="btn-group">
                                            <button class="btn btn-primary" data-calendar-nav="prev"><< Prev</button>
                                            <button class="btn" data-calendar-nav="today" id="today_button">Today</button>
                                            <button class="btn btn-primary" data-calendar-nav="next">Next >></button>
                                        </div>
                                        <div class="btn-group">
                                            <button class="btn btn-warning" data-calendar-view="year">Year</button>
                                            <button class="btn btn-warning active" data-calendar-view="month">Month</button>

                                        </div>
                                    </div>
                                    <div class="pull-right1 form-inline">
                                        <div class="btn-group1">
                                            <small class="cal-events-num badge badge-important pull-left">Unfinished</small>
                                            <small class="cal-events-num badge badge-important1 pull-left">Unallocated</small>

                                        </div>
                                    </div>

                                </div>

                                <div>
                                    <div class="span9">
                                        <div id="calendar"></div>
                                    </div>
                                </div>

                                <div class="clearfix"></div>
                                <br><br>
                                <br><br>

                                <div id="disqus_thread"></div>

                                <script src="@Url.Content("~/Scripts/calendar/components/jquery/jquery.min.js")"></script>
                                <script src="@Url.Content("~/Scripts/calendar/components/underscore/underscore-min.js")"></script>
                                <script src="@Url.Content("~/Scripts/calendar/components/bootstrap2/js/bootstrap.min.js")"></script>
                                <script src="@Url.Content("~/Scripts/calendar/components/jstimezonedetect/jstz.min.js")"></script>
                                <script src="@Url.Content("~/Scripts/calendar/js/calendar.js")"></script>

                                <script>
                                    (function ($) {
                                        "use strict";
                                        var options = {
                                            events_source: 'null',
                                            view: 'month',
                                            tmpl_path: '/Scripts/calendar/tmpls/',
                                            tmpl_cache: false,
                                            day: '2013-03-12',
                                            onAfterEventsLoad: function (events) {
                                                if (!events) {
                                                    return;
                                                }
                                                var list = $('#eventlist');
                                                list.html('');

                                                $.each(events, function (key, val) {
                                                    $(document.createElement('li'))
                                                        .html('<a href="' + val.url + '">' + val.title + '</a>')
                                                        .appendTo(list);
                                                });
                                            },
                                            onAfterViewLoad: function (view) {
                                                $('.page-header h3').text(this.getTitle());
                                                $('.btn-group button').removeClass('active');
                                                $('button[data-calendar-view="' + view + '"]').addClass('active');
                                            },
                                            classes: {
                                                months: {
                                                    general: 'label'
                                                }
                                            }
                                        };

                                        var calendar = $('#calendar').calendar(options);

                                        $('.btn-group button[data-calendar-nav]').each(function () {
                                            var $this = $(this);
                                            $this.click(function () {
                                                calendar.navigate($this.data('calendar-nav'));
                                            });
                                        });

                                        $('.btn-group button[data-calendar-view]').each(function () {
                                            var $this = $(this);
                                            $this.click(function () {
                                                calendar.view($this.data('calendar-view'));
                                            });
                                        });

                                        $('#first_day').change(function () {
                                            var value = $(this).val();
                                            value = value.length ? parseInt(value) : null;
                                            calendar.setOptions({ first_day: value });
                                            calendar.view();
                                        });

                                        $('#language').change(function () {
                                            calendar.setLanguage($(this).val());
                                            calendar.view();
                                        });

                                        $('#events-in-modal').change(function () {
                                            var val = $(this).is(':checked') ? $(this).val() : null;
                                            calendar.setOptions({ modal: val });
                                        });
                                        $('#events-modal .modal-header, #events-modal .modal-footer').click(function (e) {
                                            //e.preventDefault();
                                            //e.stopPropagation();
                                        });
                                    }(jQuery));

                                    document.getElementById('today_button').click();
                                </script>
                            </div>
                        </div>
                        <div class="space-6"></div>
                        <div class="vspace-12-sm"></div>
                    </div><!-- /.row -->
                    <!-- /.row -->
                    <!-- PAGE CONTENT ENDS -->
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.page-content-area -->
    </div>
</body>
</html>
