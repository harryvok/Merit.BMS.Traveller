                matchedTerm: {
                    title: 'matched term',
                    create: false,
                    edit: false,
                }

            },
            selectionChanged: function (data) {


            }
        });
        


        var alias = $('#webAppAlias').val();
        $.ajax({
            type: "POST",
            url: '@Url.Action("getNumberUnreadMessages", "Messages")',
            async: false,
            data: {
  
            },
            success: function (result) {
                $("#unreadmsgs").html(result.number);
            
            }
        });


    });
    
</script>
