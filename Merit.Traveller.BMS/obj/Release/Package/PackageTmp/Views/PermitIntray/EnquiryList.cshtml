@model Merit.Traveller.BMS.BMS_Web_Permit_Data.permit_list_list
<div id="enquiryListContainer">
    <table id="enquiryTable" class="sortable" title="" cellspacing="0">
        <thead class="tableHeader">
            <tr>
                <th>Varn Ref.</th>
                <th>Permit No.</th>
                <th>Surname</th>
                <th>Given Name</th>
                <th>Permit Class</th>
                <th>Next Action</th>
                <th>Status</th>
                <th>Final?</th>
                <th>Doc. No.</th>
                <th>Registered</th>
                <th>Site</th>
            </tr>
        </thead>
        @{
            String parity="oddRow";
            foreach (var permit in Model.permit_list_dets)
            {
                
            <tr id="" class="@parity enquiryRow" data-permitID="@permit.permit_guid" >
                <td>@permit.varn_ref</td>
                @{ 
                    if (permit.permit_no == 0)
                        { <td></td> }
                        else
                        {<td>@permit.permit_no</td>}
                }
                <td>@permit.surname</td>
                <td>@permit.given_name</td>
                <td>@permit.permit_type_class</td>
                <td>@permit.next_action</td>
                <td>@permit.status_outcome</td>
                <td>@permit.finalised_ind</td>
                <td>@permit.document_no</td>
                <td>@permit.date_lodged.ToString().Split(' ')[0]</td>
                <td>@permit.lodged_at_for</td>
                
            </tr>
            
                if (parity == "oddRow"){
                    parity = "evenRow";
                }else{
                    parity = "oddRow";
                }
            }
        }
    </table>
</div>
