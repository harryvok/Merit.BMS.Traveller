@model Merit.Traveller.CRM.ws_merit_admin.ws_merit_loginRequestBody
@{
    ViewBag.Title = "Log On";
}



<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


<div class="panel">
    
    @using (Html.BeginForm())
    {  
        <h1>Log On</h1>

        <p>
            <strong>Please enter your user name and password.</strong>
            <br />
            @Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.")
        </p>
        <div class="editor-label">
            User ID
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.user_id, new { @Class = "login" })
            @Html.ValidationMessageFor(m => m.user_id)
        </div>

        <div class="editor-label">
            Password
        </div>
        <div class="editor-field">
            @Html.PasswordFor(m => m.password, new { @Class = "login" })
            @Html.ValidationMessageFor(m => m.password)
        </div>

        <p>
            <input type="submit" value="Log On" />
        </p>
    }
</div>
